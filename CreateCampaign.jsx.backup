import { useState } from 'react';
import { useNavigate } from 'react-router-dom';
import { Check, ArrowLeft } from 'lucide-react';
import AIAdGenerator from '../components/AIAdGenerator';

export default function CreateCampaign() {
  const navigate = useNavigate();
  const [step, setStep] = useState(1);
  const [campaign, setCampaign] = useState({
    name: '',
    objective: 'conversions',
    budget: '',
    platforms: [],
    products: [],
    adCopy: {
      headline: '',
      description: '',
      cta: 'Shop Now'
    }
  });

  const objectives = [
    { id: 'awareness', name: 'Brand Awareness', icon: 'ðŸ‘ï¸' },
    { id: 'consideration', name: 'Consideration', icon: 'ðŸ¤”' },
    { id: 'conversions', name: 'Conversions', icon: 'ðŸŽ¯' }
  ];

  const platforms = [
    { id: 'zepto', name: 'Zepto', icon: 'âš¡' },
    { id: 'facebook', name: 'Facebook', icon: 'ðŸ“˜' },
    { id: 'instagram', name: 'Instagram', icon: 'ðŸ“¸' }
  ];

  const products = [
    { id: '1', name: 'Nike Air Max 270', price: 12995 },
    { id: '2', name: 'Jordan 1 Retro High', price: 14995 }
  ];

  const handleSelectAd = (ad) => {
    setCampaign({
      ...campaign,
      adCopy: {
        headline: ad.headline,
        description: ad.description,
        cta: ad.cta
      }
    });
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 py-8">
      <div className="max-w-4xl mx-auto px-4">
        <div className="mb-8">
          <h1 className="text-3xl font-bold text-white">Create Campaign</h1>
          <p className="text-gray-400">Step {step} of 4</p>
        </div>

        {step === 1 && (
          <div className="bg-gray-800 rounded-xl p-6">
            <h2 className="text-2xl font-bold text-white mb-6">Campaign Details</h2>
            
            <div className="space-y-4 mb-6">
              <div>
                <label className="text-sm text-gray-400 mb-2 block">Campaign Name</label>
                <input
                  type="text"
                  value={campaign.name}
                  onChange={(e) => setCampaign({...campaign, name: e.target.value})}
                  placeholder="e.g. Diwali Sale - Nike Shoes"
                  className="w-full bg-gray-700 text-white rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
              </div>

              <div>
                <label className="text-sm text-gray-400 mb-2 block">Campaign Objective</label>
                <div className="grid grid-cols-3 gap-4">
                  {objectives.map((obj) => (
                    <div
                      key={obj.id}
                      onClick={() => setCampaign({...campaign, objective: obj.id})}
                      className={`p-4 rounded-lg border-2 cursor-pointer transition-all ${
                        campaign.objective === obj.id
                          ? 'border-blue-500 bg-blue-500/10'
                          : 'border-gray-700 bg-gray-700 hover:border-gray-600'
                      }`}
                    >
                      <div className="text-3xl mb-2">{obj.icon}</div>
                      <h3 className="font-bold text-white text-sm">{obj.name}</h3>
                    </div>
                  ))}
                </div>
              </div>

              <div>
                <label className="text-sm text-gray-400 mb-2 block">Budget (â‚¹)</label>
                <input
                  type="number"
                  value={campaign.budget}
                  onChange={(e) => setCampaign({...campaign, budget: e.target.value})}
                  placeholder="50000"
                  className="w-full bg-gray-700 text-white rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
              </div>
            </div>

            <button
              onClick={() => setStep(2)}
              disabled={!campaign.name || !campaign.budget}
              className="w-full bg-blue-600 hover:bg-blue-700 disabled:bg-gray-700 disabled:cursor-not-allowed text-white py-3 rounded-lg transition-colors"
            >
              Next: Select Platforms
            </button>
          </div>
        )}

        {step === 2 && (
          <div className="bg-gray-800 rounded-xl p-6">
            <h2 className="text-2xl font-bold text-white mb-6">Select Platforms</h2>
            
            <div className="space-y-6 mb-6">
              <div>
                <label className="text-sm text-gray-400 mb-2 block">Choose where to advertise</label>
                <div className="grid grid-cols-3 gap-4">
                  {platforms.map((platform) => (
                    <div
                      key={platform.id}
                      onClick={() => {
                        const isSelected = campaign.platforms.includes(platform.id);
                        setCampaign({
                          ...campaign,
                          platforms: isSelected
                            ? campaign.platforms.filter(p => p !== platform.id)
                            : [...campaign.platforms, platform.id]
                        });
                      }}
                      className={`p-4 rounded-lg border-2 cursor-pointer transition-all ${
                        campaign.platforms.includes(platform.id)
                          ? 'border-blue-500 bg-blue-500/10'
                          : 'border-gray-700 bg-gray-700 hover:border-gray-600'
                      }`}
                    >
                      <div className="text-3xl mb-2">{platform.icon}</div>
                      <h3 className="font-bold text-white text-sm">{platform.name}</h3>
                      {campaign.platforms.includes(platform.id) && (
                        <Check className="text-blue-400 mt-2" size={20} />
                      )}
                    </div>
                  ))}
                </div>
              </div>
            </div>

            <div className="flex gap-4">
              <button
                onClick={() => setStep(1)}
                className="flex-1 bg-gray-700 hover:bg-gray-600 text-white py-3 rounded-lg transition-colors"
              >
                Back
              </button>
              <button
                onClick={() => setStep(3)}
                disabled={campaign.platforms.length === 0}
                className="flex-1 bg-blue-600 hover:bg-blue-700 disabled:bg-gray-700 disabled:cursor-not-allowed text-white py-3 rounded-lg transition-colors"
              >
                Next: Select Products
              </button>
            </div>
          </div>
        )}

        {step === 3 && (
          <div className="bg-gray-800 rounded-xl p-6">
            <h2 className="text-2xl font-bold text-white mb-6">Select Products</h2>
            
            <div className="space-y-3 mb-6">
              {products.map((product) => (
                <div
                  key={product.id}
                  onClick={() => {
                    const isSelected = campaign.products.includes(product.id);
                    setCampaign({
                      ...campaign,
                      products: isSelected
                        ? campaign.products.filter(p => p !== product.id)
                        : [...campaign.products, product.id]
                    });
                  }}
                  className={`p-4 rounded-lg border-2 cursor-pointer transition-all flex items-center justify-between ${
                    campaign.products.includes(product.id)
                      ? 'border-blue-500 bg-blue-500/10'
                      : 'border-gray-700 bg-gray-700 hover:border-gray-600'
                  }`}
                >
                  <div className="flex items-center gap-4">
                    <div className="text-4xl">ðŸ‘Ÿ</div>
                    <div>
                      <h3 className="font-bold text-white">{product.name}</h3>
                      <p className="text-gray-400">â‚¹{product.price.toLocaleString()}</p>
                    </div>
                  </div>
                  {campaign.products.includes(product.id) && (
                    <Check className="text-blue-400" size={24} />
                  )}
                </div>
              ))}
            </div>

            <div className="flex gap-4">
              <button
                onClick={() => setStep(2)}
                className="flex-1 bg-gray-700 hover:bg-gray-600 text-white py-3 rounded-lg transition-colors"
              >
                Back
              </button>
              <button
                onClick={() => setStep(4)}
                disabled={campaign.products.length === 0}
                className="flex-1 bg-blue-600 hover:bg-blue-700 disabled:bg-gray-700 disabled:cursor-not-allowed text-white py-3 rounded-lg transition-colors"
              >
                Next: Generate Ads
              </button>
            </div>
          </div>
        )}

        {step === 4 && (
          <div>
            <AIAdGenerator 
              products={products.filter(p => campaign.products.includes(p.id))}
              targeting={{ locations: ['Mumbai', 'Delhi'] }}
              onSelectAd={handleSelectAd}
            />

            {campaign.adCopy.headline && (
              <div className="bg-gray-800 rounded-xl p-6 mt-6">
                <h3 className="text-xl font-bold text-white mb-4">âœ… Selected Ad Preview</h3>
                <div className="bg-gray-900 rounded-lg p-4 mb-6">
                  <h4 className="text-lg font-bold text-white mb-2">{campaign.adCopy.headline}</h4>
                  <p className="text-gray-300 text-sm mb-4">{campaign.adCopy.description}</p>
                  <button className="bg-blue-600 text-white px-6 py-2 rounded-lg text-sm font-medium">
                    {campaign.adCopy.cta}
                  </button>
                </div>

                <div className="flex gap-4">
                  <button
                    onClick={() => setStep(3)}
                    className="flex-1 bg-gray-700 hover:bg-gray-600 text-white py-3 rounded-lg transition-colors flex items-center justify-center gap-2"
                  >
                    <ArrowLeft size={20} />
                    Back
                  </button>
                  <button
                    onClick={() => {
                      console.log('Campaign created:', campaign);
                      alert('ðŸŽ‰ Campaign created successfully! It will go live after review.');
                      navigate('/campaigns');
                    }}
                    className="flex-1 bg-green-600 hover:bg-green-700 text-white py-3 rounded-lg transition-colors flex items-center justify-center gap-2"
                  >
                    <Check size={20} />
                    Create Campaign
                  </button>
                </div>
              </div>
            )}
          </div>
        )}
      </div>
    </div>
  );
}
