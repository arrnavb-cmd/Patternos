import { useState } from 'react';
import { Sparkles, Copy, Check, RefreshCw, Wand2 } from 'lucide-react';

export default function AIAdGenerator({ products = [], targeting = {}, onSelectAd }) {
  const [generating, setGenerating] = useState(false);
  const [generatedAds, setGeneratedAds] = useState([]);
  const [copiedIndex, setCopiedIndex] = useState(null);

  const adTemplates = [
    {
      style: 'urgency',
      headlines: [
        'üî• Limited Time: {product} at Unbeatable Prices!',
        '‚ö° Flash Sale: Get {product} Before It\'s Gone!',
        'üéØ Last Chance: {product} - {discount}% OFF Today Only!'
      ],
      descriptions: [
        'Don\'t miss out on authentic {product}. Fast delivery to {location}. Limited stock available! ‚è∞',
        'Hurry! Premium {product} selling fast. Order now for same-day delivery in {location}. {discount}% OFF! üöÄ',
        'Only {stock} left! Grab your {product} now. Trusted by 100K+ customers in {location}. Free shipping! üì¶'
      ]
    },
    {
      style: 'benefit',
      headlines: [
        '‚ú® Upgrade Your Style with Premium {product}',
        'üí™ Performance Meets Comfort: {product}',
        'üåü Experience Excellence: {product}'
      ],
      descriptions: [
        'Premium quality {product} designed for champions. Trusted by athletes worldwide. Available now in {location}! üèÜ',
        'Elevate your game with {product}. Superior comfort, unmatched durability. {discount}% OFF for {location} customers! ‚≠ê',
        'Why settle for less? Get authentic {product} with warranty. Fast delivery to {location}. Shop now! üéÅ'
      ]
    },
    {
      style: 'social_proof',
      headlines: [
        '‚≠ê Rated 4.8/5: {product} - Customer Favorite',
        'üèÜ #1 Best-Seller: {product} in {location}',
        'üíØ Trusted by 100K+ Customers: {product}'
      ],
      descriptions: [
        'Join thousands of happy customers in {location}. Authentic {product} with 100% genuine guarantee. Order today! üåü',
        '"{product} changed my game!" - 10K+ verified reviews. Get yours now in {location}. {discount}% OFF! ‚ö°',
        'Why everyone in {location} loves {product}: Premium quality, fast delivery, best prices. Shop now! üíô'
      ]
    },
    {
      style: 'value',
      headlines: [
        'üí∞ Best Deal: {product} - {discount}% OFF!',
        'üéâ Mega Savings: Premium {product} at Great Prices',
        'üî• Hot Deal: {product} + Free Shipping'
      ],
      descriptions: [
        'Get more for less! {product} at {discount}% OFF. Plus free delivery to {location}. Limited time offer! üéÅ',
        'Premium {product} without the premium price. Save big in {location}. Buy 2, Get extra {discount}% OFF! üí∏',
        'Best price guaranteed on {product}. Fast delivery to {location}. Price match promise! üè∑Ô∏è'
      ]
    }
  ];

  const generateAds = () => {
    setGenerating(true);
    
    setTimeout(() => {
      const productName = products[0]?.name || 'Nike Shoes';
      const location = targeting.locations?.[0] || 'your area';
      const discount = Math.floor(Math.random() * 30) + 10;
      const stock = Math.floor(Math.random() * 50) + 10;

      const ads = adTemplates.map((template, idx) => {
        const randomHeadline = template.headlines[Math.floor(Math.random() * template.headlines.length)];
        const randomDescription = template.descriptions[Math.floor(Math.random() * template.descriptions.length)];

        return {
          id: idx,
          style: template.style,
          headline: randomHeadline
            .replace('{product}', productName)
            .replace('{discount}', discount)
            .replace('{location}', location),
          description: randomDescription
            .replace('{product}', productName)
            .replace('{discount}', discount)
            .replace('{location}', location)
            .replace('{stock}', stock),
          cta: ['Shop Now', 'Buy Now', 'Get Started', 'Learn More'][Math.floor(Math.random() * 4)],
          performance: {
            ctr: (Math.random() * 3 + 2).toFixed(2),
            cvr: (Math.random() * 5 + 3).toFixed(2),
            engagement: (Math.random() * 20 + 70).toFixed(0)
          }
        };
      });

      setGeneratedAds(ads);
      setGenerating(false);
    }, 2000);
  };

  const copyToClipboard = (text, index) => {
    navigator.clipboard.writeText(text);
    setCopiedIndex(index);
    setTimeout(() => setCopiedIndex(null), 2000);
  };

  const getStyleColor = (style) => {
    switch(style) {
      case 'urgency': return 'from-red-500 to-orange-500';
      case 'benefit': return 'from-blue-500 to-purple-500';
      case 'social_proof': return 'from-green-500 to-emerald-500';
      case 'value': return 'from-yellow-500 to-orange-500';
      default: return 'from-gray-500 to-gray-600';
    }
  };

  const getStyleIcon = (style) => {
    switch(style) {
      case 'urgency': return '‚ö°';
      case 'benefit': return 'üí™';
      case 'social_proof': return '‚≠ê';
      case 'value': return 'üí∞';
      default: return '‚ú®';
    }
  };

  return (
    <div className="space-y-6">
      <div className="bg-gradient-to-r from-purple-600 to-pink-600 rounded-xl p-6">
        <div className="flex items-center gap-3 mb-4">
          <Wand2 className="text-white" size={28} />
          <div>
            <h2 className="text-2xl font-bold text-white">AI Ad Generator</h2>
            <p className="text-purple-100 text-sm">Generate high-converting ad copy in seconds</p>
          </div>
        </div>

        <button
          onClick={generateAds}
          disabled={generating}
          className="w-full bg-white hover:bg-gray-100 disabled:bg-gray-300 text-purple-600 font-bold py-4 rounded-lg flex items-center justify-center gap-3 transition-colors"
        >
          {generating ? (
            <>
              <RefreshCw className="animate-spin" size={20} />
              Generating AI-Powered Ads...
            </>
          ) : (
            <>
              <Sparkles size={20} />
              Generate Ad Variations
            </>
          )}
        </button>
      </div>

      {generatedAds.length > 0 && (
        <div className="space-y-4">
          <h3 className="text-xl font-bold text-white">Generated Ad Variations ({generatedAds.length})</h3>
          
          {generatedAds.map((ad) => (
            <div key={ad.id} className="bg-gray-800 rounded-xl p-6 border-2 border-gray-700 hover:border-purple-500 transition-all">
              <div className="flex items-center justify-between mb-4">
                <div className="flex items-center gap-3">
                  <div className={`w-12 h-12 rounded-lg bg-gradient-to-br ${getStyleColor(ad.style)} flex items-center justify-center text-2xl`}>
                    {getStyleIcon(ad.style)}
                  </div>
                  <div>
                    <h4 className="font-bold text-white capitalize">{ad.style.replace('_', ' ')} Style</h4>
                    <p className="text-xs text-gray-400">Optimized for conversions</p>
                  </div>
                </div>

                <div className="flex items-center gap-2">
                  <button
                    onClick={() => copyToClipboard(`${ad.headline}\n\n${ad.description}\n\n${ad.cta}`, ad.id)}
                    className="p-2 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors"
                  >
                    {copiedIndex === ad.id ? (
                      <Check className="text-green-400" size={20} />
                    ) : (
                      <Copy className="text-gray-400" size={20} />
                    )}
                  </button>
                  {onSelectAd && (
                    <button
                      onClick={() => onSelectAd(ad)}
                      className="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg text-sm font-medium transition-colors"
                    >
                      Use This Ad
                    </button>
                  )}
                </div>
              </div>

              <div className="bg-gray-900 rounded-lg p-4 mb-4">
                <h5 className="text-lg font-bold text-white mb-2">{ad.headline}</h5>
                <p className="text-gray-300 text-sm mb-4">{ad.description}</p>
                <button className="bg-blue-600 text-white px-6 py-2 rounded-lg text-sm font-medium">
                  {ad.cta}
                </button>
              </div>

              <div className="flex items-center gap-6 text-sm">
                <div>
                  <span className="text-gray-400">Est. CTR:</span>
                  <span className="text-blue-400 font-bold ml-2">{ad.performance.ctr}%</span>
                </div>
                <div>
                  <span className="text-gray-400">Est. CVR:</span>
                  <span className="text-green-400 font-bold ml-2">{ad.performance.cvr}%</span>
                </div>
                <div>
                  <span className="text-gray-400">Engagement:</span>
                  <span className="text-purple-400 font-bold ml-2">{ad.performance.engagement}%</span>
                </div>
              </div>
            </div>
          ))}
        </div>
      )}

      {generatedAds.length === 0 && (
        <div className="bg-gray-800 rounded-xl p-12 text-center border-2 border-dashed border-gray-700">
          <Sparkles className="mx-auto text-gray-600 mb-4" size={48} />
          <h3 className="text-xl font-bold text-white mb-2">Ready to Generate Ads</h3>
          <p className="text-gray-400">Click the button above to generate AI-powered ad variations</p>
        </div>
      )}
    </div>
  );
}
